.gift {
  position: relative;
  width: 100%;
  height: 100vh;
}
.gift .content {
  width: 90%;
  height: 60%;
  margin: 0 auto;
  margin-top: 50rpx;
  position: relative;
}
.gift .content .flushed {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 15rpx;
  right: 30rpx;
  z-index: 999;
}
.gift .content .back {
  position: absolute;
  top: 15rpx;
  width: 50rpx;
  height: 60rpx;
  left: 30rpx;
  z-index: 999;
}
.gift .content .hk {
  position: absolute;
  top: 0px;
  left: 50%;
  transform: translateX(-50%);
}
.gift .content .title {
  text-align: center;
  font-size: 30rpx;
  color: white;
  width: 85%;
  line-height: 46rpx;
  color: #354e5a;
  /* margin-top: 51px; */
  position: absolute;
  top: 500rpx;
  left: 50%;
  transform: translateX(-50%);
}
.gift .content .desc {
  font-size: 26rpx;
  color: #354e5a;
  margin-top: 20rpx;
  position: absolute;
  top: 587rpx;
  left: 50%;
  transform: translateX(-50%);
  display: none;
}
