.gift {
  height: 100%;
  position: relative;
  background: black;
  background-image: url('data:image/png;base64,');
  background-position: 0 0;
  background-repeat: 0 0;
  background-size: 100%;
  padding: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.gift .content {
  width: 90%;
  height: 70%;
  margin: 0 auto;
  position: relative;
}
.gift .content .flushed {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 15rpx;
  right: 30rpx;
  z-index: 999;
}
.gift .content .back {
  position: absolute;
  top: 15rpx;
  width: 50rpx;
  height: 60rpx;
  left: 30rpx;
  z-index: 999;
}
.gift .content .hk {
  position: absolute;
  top: 0px;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 32rpx;
  height: 580rpx;
}
.gift .content .title {
  text-align: center;
  font-size: 30rpx;
  color: white;
  width: 85%;
  line-height: 46rpx;
  color: #d6d2fb;
  position: absolute;
  top: 600rpx;
  left: 50%;
  transform: translateX(-50%);
}
.gift .content .desc {
  font-size: 25rpx;
  color: #d6d2fb;
  margin-top: 20rpx;
  position: absolute;
  top: 679rpx;
  left: 80%;
  opacity: 0.8;
  display: none;
}
